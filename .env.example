# IoT SOC Analyst Suite - Environment Configuration
# Copy this file to .env and adjust values for your environment

# =============================================================================
# MongoDB Configuration
# =============================================================================
# URI for MongoDB connection (default: localhost with no auth)
MONGODB_URI="mongodb://localhost:27017"

# Database name
MONGODB_DATABASE="iot_soc"

# =============================================================================
# Network Security Tools
# =============================================================================
# Path to Suricata EVE JSON log file
# Windows Example: "C:\Program Files\Suricata\log\eve.json"
# Linux Example: "/var/log/suricata/eve.json"
SURICATA_EVE_PATH="/var/log/suricata/eve.json"

# Nmap binary path (if not in system PATH)
NMAP_PATH="nmap"

# Default subnet to scan
DEFAULT_SUBNET="192.168.1.0/24"

# Network interface to capture traffic on (for Scapy)
# Use 'ipconfig' (Windows) or 'ip addr' (Linux) to find interface names
# Windows Example: "Ethernet0"
# Linux Example: "eth0" or "wlan0"
CAPTURE_INTERFACE="eth0"

# =============================================================================
# External APIs / Services
# =============================================================================
# Firmware Analyzer Service URL
FIRMWARE_ANALYZER_URL="http://localhost:8000"

# NVD API Key (Optional)
# Get a key for faster rate limits: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=""

# =============================================================================
# Application Settings
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Export directory path
EXPORT_DIR="./exports"
